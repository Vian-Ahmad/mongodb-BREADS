<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoDB Breads(Browse, Read, Edit, Add, Delete, Sort)</title>
    <link rel="stylesheet" href="/stylesheets/todo.css" />
    <link rel="stylesheet" href="/stylesheets/fontawesome/css/all.min.css" />

    <script>
        let executorid = '<%= userid %>'
    </script>
    <script src="/javascripts/jquery.min.js"></script>

    <script src="/javascripts/moment.min.js"></script>

</head>

<body>
    <div class="box">
        <div class="title-todo">
            <h2>Todo List</h2>
        </div>
        <div class="boxBody">
            <div class="firstline">
                <label for="titleSearch">Title</label>
                <input type="text" id="titleSearch" name="title" placeholder="insert your title" class="bytitle" />
            </div>
            <div class="secondline">
                <label for="deadline">Deadline</label>
                <input type="datetime-local" name="startdate" id="startdate" class="bydate" />
                <p>s.d.</p>
                <input type="datetime-local" name="enddate" id="enddate" class="bydate" />
            </div>
            <div class="thirdline">
                <label for="complete">Complete</label>
                <select name="complete" class="bycomplete" id="bycomplete">
                    <option value="">-select complete-</option>
                    <option value="true">Done</option>
                    <option value="false">Not Yet</option>
                </select>
            </div>
            <div class="forthline">
                <div class="subforthline" id="btnClick">
                    <button class="sortingbydeadline" onclick="sortToggle()"><i class="fa-solid fa-sort" style="color: #ffffff;"></i>&nbsp;sort
                        by deadline</button>
                </div>
                <div class="tdsBtn">
                    <button class="ref-tds" type="button" onclick="reset()"><i class="fa-solid fa-arrows-rotate"
                            style="color: #000000;"></i></button>
                    <button class="src-tds" type="submit" onclick="searchTodo()"><i class="fa-solid fa-magnifying-glass"
                            style="color: #000000;"></i></button>
                </div>
            </div>
            <div class="addTitle">
                <input type="text" id="title" name="title" placeholder="title" class="formTitle" />
                <button class="saveBtn" id="saveBtn"><i class="fa-solid fa-circle-down"
                        style="color: #0091ff;"></i></button>
            </div>
            <div class="showTodos" id="showTodos">

            </div>
        </div>
    </div>

    <!-- Modals delete and update -->

    <div id="todos-deleteModal" class="todos-deleteModal">
        <div class="popupDelete">
            <div class="delete-header">
                <p>Delete Confirmation</p>
                <p onclick="cancleDelete()">&times;</p>
            </div>
            <div class="delete-body">
                <p class="asking">Are you sure?</p>
            </div>
            <div class="delete-footer">
                <span class="btn-no" onclick="cancleDelete()">No</span>
                <a id="btn-yes" class="btn-yes" href="#" onclick="deleteTodos()">Yes</a>
            </div>
        </div>
    </div>

    <div id="todos-formModal" class="todos-formModal">
        <div class="modals-form">
            <div class="popup-form">
                <div class="form-header">
                    <p>User form</p>
                    <p onclick="cancleEdit()">&times;</p>
                </div>
                <div class="form-body">
                    <div class="form-title">
                        <label for="titleEdit">title</label>
                        <input type="text" id="titleEditM" class="input-title">
                    </div>
                    <div class="form-deadline">
                        <label for="deadline">Deadline</label>
                        <input type="datetime-local" id="deadlineM" class="input-date">
                    </div>
                    <div class="form-noted">
                        <label for="complete">Complete</label>
                        <input type="checkbox" id="completeM" class="checkbox">
                        <a>Done</a>
                    </div>
                </div>
                <div class="form-footer">
                    <span class="btn-cancle" onclick="cancleEdit()">No</span>
                    <a id="btn-sub" class="btn-sub" href="#" onclick="updateTodos()">Save changes</a>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/todo.js"></script>

</body>

</html>